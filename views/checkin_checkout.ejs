<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Search flights</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .paymentinfo
        {
            background-color: #5DA7DB;
        }
        
    </style>
  </head>
  <body>
    <div class="container-fluid">
        <nav class="navbar bg-primary navbar-expand-lg text-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="homepage"><h4 class="text-light">Nomadic travel</h4></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    
                    <li class="nav-item">
                        <a class="nav-link active text-light" aria-current="page" href="checkin_checkout">
                            <button type="button" class="btn btn-primary">Check-outs</button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-light" aria-current="page" href="addsuit">
                            <button type="button" class="btn btn-primary">Add suit</button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-light" aria-current="page" href="addroom">
                            <button type="button" class="btn btn-primary">Add room</button>
                        </a>
                    </li>
                    
                    
                    
                </ul>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        My account
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="editprofile">Edit profile</a></li>
                      <li><a class="dropdown-item" href="logout">Log out</a></li>
                    </ul>
                  </div>
                
                </div>
            </div>
        </nav>
    </div>  
    <div class="container mt-2">
        <div class="row justify-content-center">
            <div class="col-4">
                <div class="row  text-center mb-2">
                    <a class="text-decoration-none" href="createuser">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3>Edit profile</h3>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="row  text-center mb-2">
                    <a class="text-decoration-none" href="addsuit">
                        <div class="card bg-light">
                            <div class="card-body">
                               <h3> Add suit </h3>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="row text-center mb-2">
                    <a class="text-decoration-none" href="addroom">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h3>Add room</h3>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            
        </div>
        <hr>
    </div>
    <div class="container text-center mt-2">
        <h2>Reservations</h2>
    </div>
    <div class="container mt-2">
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col"><h5>Room name</h5></th>
                <th scope="col"><h5>type</h5></th>
                <th scope="col"><h5>Check-in</h5></th>
                <th scope="col"><h5>Check-out</h5></th>
                <th scope="col" class="text-center"><h5>Action</h5></th>


              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < search_results.length; i++) { %>
                    <% for(var j=0; j < search_results[i].booking_end_date.length; j++) { %>
                        <tr>
                            <td><%= search_results[i].name %></td>
                            <td><%= search_results[i].type %></td>
                            <td><%= search_results[i].booking_start_date[j] %></td>
                            <td><%= search_results[i].booking_end_date[j] %></td>
                            <td>
                                <div class="container text-center mt-2">
                                    <div class="row text-center">
                                        <div class="col-12">
                                            <form method="post" action="checkout">
                                                <input type="hidden" id="booking_start_date" name="booking_start_date" value = "<%= search_results[i].booking_start_date[j] %>"/>
                                                <input type="hidden" id="booking_end_date" name="booking_end_date" value = "<%= search_results[i].booking_end_date[j] %>"/>
                                                <input type="hidden" id="roomId" name="roomId" value = "<%= search_results[i].roomId %>"/>

                                                <button type="submit" class="btn btn-warning text-left">Check-out</button>
                                            </form>
                                        </div>
                                       
                                    </div>
                                </div>
                            </td>


                        </tr>
                        <% } %>
                <% } %>
            </tbody>
          </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  </body>
</html>